# API Configuration
API_TITLE="Legal Document Simplifier API"
API_VERSION="v1"
DEBUG=false
API_KEY="your-secure-api-key-here"

# CORS Configuration
CORS_ORIGINS="http://localhost:3000,https://localhost:3000"

# GCP Configuration
GCP_PROJECT_ID="your-gcp-project-id"
GCP_LOCATION="us-central1"
DOCAI_PROCESSOR_ID="your-document-ai-processor-id"
DOCAI_PROCESSOR_VERSION="rc"

# Vertex AI Configuration
VERTEX_MODEL="gemini-1.5-pro"
VERTEX_LOCATION="us-central1"
VERTEX_MAX_TOKENS=8192
VERTEX_TEMPERATURE=0.1

# Milvus Configuration
MILVUS_HOST="host.docker.internal"
MILVUS_PORT=19530
MILVUS_COLLECTION="data2"

# HuggingFace Configuration
HF_MODEL_NAME="nlpaueb/legal-bert-base-uncased"
HF_CACHE_DIR="/tmp/hf_cache"

# File Upload Configuration
MAX_FILE_SIZE=20971520  # 20MB
MAX_PAGES=15

# Security (Production)
SECRET_MANAGER_PROJECT=""
USE_SECRET_MANAGER=false

# Performance
WORKER_TIMEOUT=300
KEEP_ALIVE_TIMEOUT=5
MAX_WORKERS=4

# Google Cloud Credentials (Development only)
GOOGLE_APPLICATION_CREDENTIALS="/path/to/service-account.json"
